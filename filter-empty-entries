use warnings;
use strict;

my $mode=0;
my $entryLines=0;
my $entry="";

while (my $text = <STDIN>) {
   chomp $text;

   if($entryLines == 0) {
      if($text =~ /^[a-zA-Z].*$/) {
         $entry      = "$text\n\n";
         $entryLines = 1;
      }
   }
   else {
      if($text =~ /^[ \t]*$/) {
         # Remove empty line.
      }
      elsif($text =~ /^ --.*$/) {
         $entry  = "$entry\n$text\n";
         if($entryLines > 1) {
            print "$entry\n";
         }

         if($ARGV[0] !~ /^$/) {
            if($text =~ /($ARGV[0])/) {
               exit;
            }
         }

         $entryLines = 0;
      }
      else {
         $entry      = "$entry$text\n";
         $entryLines = $entryLines + 1;
      }
   }
}
